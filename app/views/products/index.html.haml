%h1 Products Page
.all_index
  %table
    %tr
      %th Product Title 
      %th Price 
      %th Image 
      %th
      %th
      %th
    -@product.each do |product|
      %tr 
        %td=product.title 
        %td=product.price
        %td=image_tag(product.image_url, size: "160x160")
        %td= link_to 'Show', product 
        %td= link_to 'Edit', edit_product_path(product) 
        %td= link_to 'Destroy', product,:confirm => 'Are you sure?',:method => :delete
  =link_to 'Add New Product', new_product_path     
